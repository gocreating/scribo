{
  "restApiRoot": "/api",
  "host": "0.0.0.0",
  "port": 4000,
  "payment": {
    "ecpay": {
      "donation": {
        "serverCallback": "https://ecpay-dev.ngrok.io/api/payments/ecpay/donation/callback",
        "serverRedirect": "https://ecpay-dev.ngrok.io/api/payments/ecpay/donation/redirect"
